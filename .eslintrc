{
	"rules" : {
		"comma-dangle"                : [2, "never"],
		"no-constant-condition"       : 2,
		"no-dupe-keys"                : 2,
		"no-duplicate-case"           : 2,
		"no-empty"                    : 2,
		"no-ex-assign"                : 2,
		"no-extra-boolean-cast"       : 2,
		"no-extra-parens"             : 2,
		"no-extra-semi"               : 2,
		"no-func-assign"              : 2,
		"no-inner-declarations"       : [2, "both"],
		"no-irregular-whitespace"     : 2,
		"no-negated-in-lhs"           : 2,
		"no-obj-calls"                : 2,
		"no-regex-spaces"             : 2,
		"no-sparse-arrays"            : 2,
		"no-unreachable"              : 2,
		"use-isnan"                   : 2,
		"valid-jsdoc"                 : 2,
		"valid-typeof"                : 2,
		"no-unexpected-multiline"     : 2,
		"quotes"                      : [2, "single", "avoid-escape"],

		"block-scoped-var"            : 2,
		"consistent-return"           : 2,
		"curly"                       : 2,
		"default-case"                : 2,
		"dot-notation"                : 2,
		"dot-location"                : [2, "property"],
		"eqeqeq"                      : 2,
		"guard-for-in"                : 2,
		"no-else-return"              : 2,
		"no-fallthrough"              : 2,
		"no-loop-func"                : 2,
		"no-multi-spaces"             : [2, { "exceptions": { "VariableDeclarator": true } }],
		"key-spacing"                 : [2, { "beforeColon": true, "align": "colon" }],
		"no-multi-str"                : 2,
		"no-native-reassign"          : 2,
		"no-new"                      : 2,
		"no-octal"                    : 2,
		"no-redeclare"                : 2,
		"no-return-assign"            : 2,
		"no-script-url"               : 2,
		"no-self-compare"             : 2,
		"no-sequences"                : 2,
		"no-throw-literal"            : 2,
		"no-useless-concat"           : 2,
		"yoda"                        : [2, "always"],

		"strict"                      : [2, "function"],

		"no-shadow-restricted-names"  : 2,
		"no-unused-vars"              : [2, {"vars": "all", "args": "all"}],
		"no-use-before-define"        : 2,

		"array-bracket-spacing"       : [2, "never", {"objectsInArrays": true, "arraysInArrays": true }],
		"brace-style"                 : 2,
		"camelcase"                   : 2,
		"comma-spacing"               : 2,
		"comma-style"                 : 2,
		"eol-last"                    : 2,
		"indent"                      : [2, "tab"],
		"lines-around-comment"        : [2, { "beforeLineComment": true, "allowBlockStart": true }],
		"new-cap"                     : 2,
		"newline-after-var"           : [2, "always"],
		"no-lonely-if"                : 2,
		"no-mixed-spaces-and-tabs"    : [2, "smart-tabs"],
		"no-multiple-empty-lines"     : [2, {"max": 2}],
		"no-negated-condition"        : 2,
		"no-unneeded-ternary"         : 2,
		"quote-props"                 : [2, "always"],
		"semi"                        : [2, "always"],
		"space-after-keywords"        : 2,
		"space-before-function-paren" : [2, "never"],
	},
	"prefer-single"
}